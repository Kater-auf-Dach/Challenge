include bemto/bemto
include _helpers/_variables
include _helpers/_mixins

doctype html
html(lang= "ru")
  head
    include _components/_head

  body
    +b('header').page-header
      +b('a').logo_top
      +menu(mainMenu)

    +b.intro
      +e('h1').title Учеба еще никогда не была такой интересной!
      +e('p').text Обучаем готовых к трудоустройству специалистов на теоретических и практических курсах.
      button.btn.btn_request(type= 'submit') Подать заявку

    +b.features
      +e.item_learn
        +e('h3').title Гибкий график обучения
        +e('p').text Современный темп жизни требует гибкого подхода к расписанию.
      +e.item_practice
        +e('h3').title Практические занятия
        +e('p').text На одной теории далеко не уедешь, поэтому мы обучаем на практике.
      +e.item_job
        +e('h3').title Не оставим без работы
        +e('p').text Хорошие специалисты всегда в цене и Вы станете именно таким.

    +b.learn-types
      +e('h2').title.headings
      +e('a').more-link Подробнее о программе

      +table(rowAll)

    +b.feedback
      +e('h2').title.headings
      +b('form').feedback-form.form(method= 'POST', action='/post')

        +e.item
          +e('label').label ФИО
          +e('input').input(type= 'text', placeholder= 'Представьтесь, пожалуйста')

        +e.item
          +e('p').label Пол
          +e('input').input(id= 'male', name= 'sex', type= 'radio', checked)
          label(for= 'male') Мужской
          +e('input').input(id= 'female', name= 'sex', type= 'radio')
          label(for= 'female') Женский

        +e.item
          +e('label').label Доп.текст
          +e('textarea').input(placeholder= 'Сообщите о себе все, что считаете нужным')
        button.btn.btn_send(type= 'submit') Отправить


      +b.feedback-howto
        +e('h3').title Заинтересовались обучением на нашей кафедре?
        +e('p').text  Заполните короткую форму обратной связи и отправьте нам.
        +e('p').text Мы подготовим для вас индивидуальное предложение и выйдем на связь!
        +e('p').text <span>Внимание!</span> Все поля обязательны для заполнения.


    +b('footer').page-footer
      +b('a').logo_bottom
      +e('p').address 197101, г. Санкт-Петербург, пр. Кронверкский, д. 49

      +menu(footerMenu)